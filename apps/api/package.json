{
  "name": "@beehive/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:mysql",
    "db:migrate": "drizzle-kit up:mysql",
    "db:push": "drizzle-kit push:mysql",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "create-admin": "node scripts/createAdmin.js",
    "test-db": "node scripts/testDbConnection.js",
    "db:update-levels": "tsx src/scripts/updateMemberLevels.ts",
    "db:build-tree": "tsx src/scripts/buildTreeFromCSV.ts",
    "db:reimport": "tsx src/scripts/reimportMembersFromCSV.ts",
    "db:fix-placements": "tsx src/scripts/fixMemberPlacements.ts",
    "db:view-matrix": "tsx src/scripts/viewMatrix.ts",
    "db:generate-referral-codes": "tsx src/scripts/generateReferralCodes.ts",
    "db:award-bcc-rewards": "tsx src/scripts/awardBCCRewardsByLevel.ts",
    "db:fix-reward-amounts": "tsx src/scripts/fixRewardAmounts.ts",
    "db:fix-member-bcc-balances": "tsx src/scripts/fixMemberBCCBalances.ts",
    "db:fix-other-decimal-fields": "tsx src/scripts/fixOtherDecimalFields.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@beehive/shared": "workspace:*",
    "@hono/node-server": "^1.8.2",
    "@hono/zod-validator": "^0.2.1",
    "bcryptjs": "^3.0.3",
    "csv-parse": "^6.1.0",
    "drizzle-orm": "^0.29.3",
    "hono": "^4.0.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.2",
    "mysql2": "^3.9.1",
    "viem": "^2.7.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.11.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.13",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
