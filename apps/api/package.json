    "hono": "^4.0.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.2",
    "mysql2": "^3.9.1",
    "viem": "^2.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.20.13",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
